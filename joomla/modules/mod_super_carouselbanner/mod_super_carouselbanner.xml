<?xml version="1.0" encoding="utf-8"?>
<install type="module" version="1.5.0">
	<name>Super Carousel Banner</name>
	<author>Rony Sandra Yofa Zebua</author>
	<creationDate>09 January 2009</creationDate>
	<copyright>2008-2009, Camp26.Com</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>camp26team@gmail.com</authorEmail>
	<authorUrl>www.camp26.com</authorUrl>
	<version>1.2</version>
	<description>MODULE : SUPERCAROUSELBANNER</description>
	<files>
		<filename module="mod_super_carouselbanner">mod_super_carouselbanner.php</filename>
		<filename>super_carouselbanner/credits.txt</filename>
		<filename>super_carouselbanner/jquery-1.2.6.min.js</filename>
		<filename>super_carouselbanner/jquery.jcarousel.css</filename>
		<filename>super_carouselbanner/jquery.jcarousel.pack.js</filename>
		<filename>super_carouselbanner/next-horizontal.png</filename>
		<filename>super_carouselbanner/prev-horizontal.png</filename>
		<filename>super_carouselbanner/skin.css</filename>
		<filename>super_carouselbanner/logo.jpg</filename>
		<filename>super_carouselbanner/joincamp26.jpg</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_super_carouselbanner.ini</language>
	</languages>
	<params addpath="/administrator/components/com_banners/elements">
		<param name="target" type="list" default="1" label="Target" description="PARAMTARGET">
			<option value="0">Parent Window With Browser Navigation</option>
			<option value="1">New Window With Browser Navigation</option>
			<option value="2">New Window Without Browser Navigation</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="count" type="text" default="3" label="Count" description="PARAMNUMBERITEMS" />
		<param name="cid" type="bannerclient" default="" label="Banner client" description="PARAMSINGLECLIENT" />
		<param name="catid" type="category" section="com_banner" default="" label="Category" description="PARAMCATEGORY" />
		<param name="@spacer" type="spacer" default="" label="--- Carousel Setting ---" description="" />
		<param name="animax" type="list" default="1000" label="Carousel Animation" description="Carousel Animation">
			<option value="100">Super Faster Carousel</option>
			<option value="500">Faster Carousel</option>
			<option value="1000">Standart  Carousel</option>
			<option value="1500">Slow Carousel</option>
			<option value="10000">Smooth Carousel</option>
			<option value="20000">Super Smooth Carousel</option>
		</param>
		<param name="automator" type="text" default="3" label="Automator Delay" description="Automator Delay, set 0 if you don't need auto" />
		<param name="banneralt" type="text" default="Advertisement" label="Banner Title" description="Banner Title" />
		<param name="tag_search" type="radio" default="0" label="Search By Tags" description="PARAMSEARCHBYTAG">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="ordering" type="list" default="0" label="Randomise" description="PARAMRANDOMISE">
			<option value="0">Sticky,Ordering</option>
			<option value="random">Sticky,Randomise</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="header_text" type="textarea" rows="3" cols="40" default="" label="Header Text" description="PARAMHEADERTEXT" />
		<param name="footer_text" type="textarea" rows="3" cols="40" default="" label="Footer Text" description="PARAMFOOTERTEXT" />
		<param name="moduleclass_sfx" type="text" default="" label="Module Class Suffix" description="PARAMMODULECLASSSUFFIX" />
		<param name="@spacer" type="spacer" default="" label="" description="" />
	</params>
	<params group="advanced">
		<param name="cache" type="list" default="1" label="Caching" description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache Time" description="The time before the module is recached" />
	</params>
</install>
