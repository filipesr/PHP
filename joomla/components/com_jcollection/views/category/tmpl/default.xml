<metadata>
	<state>
		<name>JCollection Category Layout</name>
		<description>Default single category view layout for JCollection</description>
		<url addpath="/administrator/components/com_jcollection/elements">
			<param name="catid" type="category" default="0" label="Select Category" description="A JCollection category" />
		</url>
		<params>
			<param name="all" type="radio" default="0" label="Show all items (including subcategories)" >
				<option value="0">no</option>
				<option value="1">yes</option>
			</param>
			<param name="showinfosetsas" type="list" default="list" label="Show info sets as" >
				<option value="lists">lists</option>
				<option value="tabs">tabs</option>
				<option value="sliders">sliders</option>
			</param>
			<param name="overwrite_cats" type="radio" default="0" label="Category view item overrrides"
				description="Use item overrides in category view (this slows down the category view)" >
				<option value="0">No</option>
				<option value="1">Yes</option>
			</param>
		</params>
		<advanced>
			<param />
		</advanced>
	</state>
</metadata>